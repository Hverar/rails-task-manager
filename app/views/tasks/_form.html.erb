<%= form_with model: task, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_area :details, class: "form-control", placeholder: "Enter task details", rows: 4 %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, "Completed", class: "form-check-label" %>
  </div>

  <%= f.submit "Save Task", class: "btn btn-primary w-100 border-dark" %>
<% end %>
