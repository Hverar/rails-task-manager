<%= form_with model: task, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </p>

  <% if task.persisted? %>
    <p>
      <%= f.label :completed %><br>
      <%= f.check_box :completed %>
    </p>
  <% end %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
